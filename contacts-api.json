            "description": "Error register",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": "Not found"
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["contacts"],
        "summary": "Delete user contacts",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": {
              "type": "string"
            },
            "required": true,
            "example": "Bearer {token}"
          },
          {
            "in": "path",
            "name": "contactId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Id contact"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
