    "/contacts/{contactId}/favorite": {
      "put": {
        "tags": ["contacts"],
        "summary": "Change user contacts status favorite",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": {
              "type": "string"
            },
            "required": true,
            "example": "Bearer {token}"
          },
          {
            "in": "path",
            "name": "contactId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Id contact"
          }
        ],
        "requestBody": {
          "description": "User favorite status",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "favorite": {
                    "type": "boolean",
                    "example": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 200
                    },
                    "user": {
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error register",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": "Not found"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "object",
            "format": "oid"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "subscription": {
            "type": "string",
            "example": "starter",
            "enum": ["starter", "pro", "business"]
          },
          "avatarURL": {
            "type": "string"
          },
          "verify": {
            "type": "boolean"
          },
          "verificationToken": {
            "type": "string"
          }
        }
      },
      "contact": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "object",
            "format": "oid"
          },
          "owner": {
            "type": "object",
            "format": "oid"
          },
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "favorite": {
            "type": "boolean"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
